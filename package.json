{
  "name": "lit-css-test",
  "type": "module",
  "version": "0.0.1",
  "description": "An example repo of using lit with tailwind",
  "main": "lib/main.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf --glob \"./*.css\" bundle.js",
    "build:ts": "tsc",
    "build:js": "esbuild --format=esm --bundle --loader:.css=copy --outfile=bundle.js src/main.ts",
    "build:css": "postcss -r \"./*.css\"",
    "build": "rollup --config rollup.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "lit": "^3.1.0",
    "rollup": "^4.18.0",
    "rollup-plugin-css-modules": "^0.1.2",
    "rollup-plugin-multi-input": "^1.4.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-summary": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "esbuild": "^0.19.4",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  }
}
